﻿@{
    ViewData["Title"] = "Home Page";
}
﻿
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Thrift_Us.ViewModel.Product.ProductIndexViewModel>


<!DOCTYPE html>
<html lang="en">
<head>


    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thrift Us - Your Gateway to Unique Finds</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Thrift_Us.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <style>
        body {
            background-color: whitesmoke;
        }

        .navbar {
            border-bottom: 1px solid #f1f5f8;
            background-color: skyblue
        }



        .jumbotron {
            background-color: #e2e3e5;
            color: #ffffff;
            padding: 4rem 2rem;
        }

            .jumbotron a.btn-primary {
                background-color: white;
                color: floralwhite;
                border-color: black;
            }

                .jumbotron a.btn-primary:hover {
                    background-color: floralwhite;
                    color: #ffffff;
                    border-color: black;
                }

        .container {
            background-color: #e2e3e5;
            border: 1px solid black;
            padding: 2rem;
            border-radius: 0.25rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        h2 {
            color: black;
        }

        .card {
            border: 1px solid #dee2e6;
            border-radius: 0.25rem;
            transition: box-shadow 0.3s ease;
            background-color: #B9C2C5;
        }

            .card:hover {
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            }

        .card-img-top {
            max-height: 200px;
            object-fit: cover;
        }

        .card-title {
            color: hotpink;
        }

        .card-text {
            color: #495057;
        }

        .col-lg-4 col-md-4 col-sm-12 mb-4 {
            width: 250px;
        }

        .card h-100 {
            width: 200px;
        }

        .card-img-top {
            display: flex;
            justify-content: center;
        }

        .btn-primary {
            background-color: black;
            border-color: lightpink;
        }

            .btn-primary:hover {
                background-color: lightpink;
                border-color: hotpink;
            }

        .custom-carousel .carousel-item img {
            max-height: 100px;
            max-width: 50%;
            width: auto;
            height: auto;
            margin: 0 auto;
        }


        #imageCarousel {
            max-width: 600px;
            margin: auto;
        }

        #imageCarousel, .carousel-inner, .carousel-item {
            width: 100%;
        }

        .carousel-inner {
            max-height: 400px;
        }

        .carousel-item img {
            max-width: 100%;
            height: auto;
        }

        .container mt-4 {
            background-color: pink;
            max-width: 100%;
        }

        .social-links {
            margin-top: 10px;
        }

            .social-links a {
                text-decoration: none;
                color: black;
                margin-right: 15px;
                font-size: 16px;
            }

            .social-links i {
                margin-right: 5px;
            }

            .social-links a:hover {
                color: pink;
            }

        footer.bg-light {
            background-color: #e2e3e5!important;
            color: #555;
            padding-top: 20px;
            padding-bottom: 20px;
        }

        footer .social-links a {
            display: inline-block;
            margin-bottom: 10px;
            color: #555;
            text-decoration: none;
            font-size: 1.2em;
        }

        footer .social-links img {
            width: 24px;
            height: 24px;
            margin-right: 8px;
            vertical-align: middle;
        }

        footer .footer {
            text-align: center;
            padding-top: 20px;
        }

        footer ul {
            list-style: none;
            padding: 0;
        }

            footer ul li {
                margin-bottom: 10px;
            }

                footer ul li i {
                    margin-right: 8px;
                }

        footer h4 {
            color: #000;
            margin-bottom: 15px;
        }


        h4 {
            text-align: right;
        }
    </style>
</head>
<body>


    <div class="jumbotron jumbotron-fluid">
        <h1 class="display-4" style="color:black">Discover Unique Finds</h1>
        <p class="lead" style="color:black">Explore a curated collection of thrifted treasures. Your journey to unique, sustainable fashion starts here.</p>
        <div id="imageCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="Image/hello7.jpg" class="d-block w-100" alt="Image 1">
                </div>
                <div class="carousel-item">
                    <img src="Image/hello5.jpeg" class="d-block w-100" alt="Image 2">
                </div>
                <div class="carousel-item">
                    <img src="Image/helo13.webp" class="d-block w-100" alt="Image 3">
                </div>
                <div class="carousel-item">
                    <img src="Image/hello14.jpg" class="d-block w-100" alt="Image 3">
                </div>
            </div>
            <a class="carousel-control-prev" href="#imageCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#imageCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div class="container mt-4">
        <h2 class="text-center mb-4">Featured Products</h2>
        <div class="row">
            @foreach (var item in Model.Take(3))
            {
                <div class="col-lg-4 col-md-4 col-sm-12 mb-4">
                    <div class="card h-100">
                        <div class="card-img-top">
                            <img src="/Content/Image/@item.ImageUrl" alt="Product Image" style="height:220px;">
                        </div>
                        <div class="card-body">
                            <span><b>@Html.DisplayFor(modelItem => item.ProductName)</b></span>
                            <span>@Html.DisplayFor(modelItem => item.Description)</span>
                            <br>
                            <span>@Html.DisplayFor(modelItem => item.Price)</span>
                            <br>
                            <span>@Html.DisplayFor(modelItem => item.Size)</span>
                            <br>
                           
                        </div>
                        <div class="card-footer">
                            <div class="btn-group">
                                <a asp-action="Details" asp-controller="Home" asp-route-id="@item.ProductId" class="btn btn-warning mx-1 rounded">Add To Cart</a>
                            </div>
                            <div class="btn-group">
                                <a asp-action="Rent" asp-controller="Home" asp-route-id="@item.ProductId" class="btn btn-danger mx-1 rounded">Rent</a>
                            </div>
                            <div class="btn-group">
                                <form asp-action="Like" asp-controller="Like" method="post">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button type="submit" class="btn btn-success mx-1 rounded">Like</button>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>





    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-..." crossorigin="anonymous"></script>

</body>
<footer class="bg-light py-5">

    <div class="container">

        <h2 class="text-center mb-4">About Thrift Us</h2>
        <p class="lead text-center">
            Thrift Us is your go-to destination for affordable and sustainable fashion. We believe in the beauty of second-hand treasures and their unique stories.
        </p>

        <br />
        <div class="row">
            <div class="col-md-4">
                <div class="social-links">
                    <a href="https://www.facebook.com/YourFacebookPage" target="_blank" rel="noopener noreferrer">
                        <img src="https://img.icons8.com/color/48/facebook-new.png" alt="Facebook Logo" /> Facebook
                    </a>
                    <br />
                    <a href="https://www.instagram.com/YourInstagramProfile" target="_blank" rel="noopener noreferrer">
                        <img src="https://img.icons8.com/color/48/instagram-new--v1.png" alt="Instagram Logo" /> Instagram
                    </a>
                    <br />
                    <a href="https://www.linkedin.com/in/YourLinkedInProfile" target="_blank" rel="noopener noreferrer">
                        <img src="https://img.icons8.com/fluency/48/linkedin.png" alt="LinkedIn Logo" /> LinkedIn
                    </a>
                    <br />
                </div>
            </div>

            <div class="col-md-4">
                <div class="row">
                    <div class="col-lg-6 col-md-12">
                        <img src="/Image/thrift.png" alt="Thrift0us" class="img-fluid mb-3">
                    </div>
                    <div class="col-lg-6 col-md-12">
                        <h4 class="pb-3">Get In touch</h4>
                        <ul>
                            <li>
                                <i class="fa fa-map-marker"></i>
                                <span>Shantinagar, Tinkune, Kathmandu</span>
                            </li>
                            <li>
                                <i class="fa fa-phone"></i>
                                01-4620522/23/24
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <img src="/Image/footer.jpg" alt="Thrift0us" class="img-fluid mb-3">
        </div>
    </div>
    <div class="container">
        <div class="row pt-2 pb-2 copyright">
            <div class="col-6 ">
                <span>© Copyright 2024 <strong>Thrift-Us</strong>. All rights reserved</span>
            </div>

        </div>
    </div>


</footer>

</html>