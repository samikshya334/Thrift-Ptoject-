@model Thrift_Us.ViewModel.CartOrderViewModel
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<script src="https://khalti.com/static/khalti-checkout.js"></script>

<section class="h-100" style="background-color:#eee;">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
                </div>
                <form asp-action="Index" method="post">
                    @if (Model.ListOfRentalCart != null && Model.ListOfRentalCart.Count > 0)
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Product Name</th>
                                    <th>Description</th>
                                    <th>Price</th>
                                    <th>Rental Duration</th>
                                    <th>Count</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cart in Model.ListOfRentalCart)
                                {
                                    <tr>
                                        <td><img src="/Content/Image/@cart.Product.ImageUrl" style="height:100px;" class="img-fluid rounded-3" alt="Product Image"></td>
                                        <td>@cart.Product.ProductName</td>
                                        <td>@Html.Raw(cart.Product.Description)</td>
                                        <td>@cart.Product.Price</td>
                                        <td>@cart.RentalDuration</td>
                                        <td>@cart.Count</td>
                                        <td>
                                            <a asp-action="plus" asp-route-id="@cart.Id" class="btn btn-link px-2">
                                                <i class="fas fa-plus-circle fa-lg"></i>
                                            </a>
                                            <a asp-action="minus" asp-route-id="@cart.Id" class="btn btn-link px-2">
                                                <i class="fas fa-minus-circle fa-lg"></i>
                                            </a>
                                            <a asp-action="delete" asp-route-id="@cart.Id" class="btn btn-link px-2">
                                                <i class="fas fa-trash fa-lg-danger"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    <div class="row">
                        <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
                            <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between bg-light">
                                    <span class="text-info"> Total</span>
                                    <strong class="text-info">@Model.RentalOrderHeader.OrderTotal</strong>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
                            <a asp-action="Summary" class="btn btn-success form-control">Payment</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>


    </div>
</section>
