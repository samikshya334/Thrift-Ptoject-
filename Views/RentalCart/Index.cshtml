@model Thrift_Us.ViewModel.CartOrderViewModel
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<script src="https://khalti.com/static/khalti-checkout.js"></script>

<section class="h-100" style="background-color:#eee;">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
                </div>
                 <form asp-action="Index" method="post">
                @if (Model.ListOfRentalCart != null && Model.ListOfRentalCart.Count > 0)
                {
                    foreach (var cart in Model.ListOfRentalCart)
                    {
                        <div class="card rounded-3 mb-4">
                            <div class="card-body p-4">
                                <div class="row d-flex justify-content-between align-items-center">
                                    <div class="col-md-2 col-lg-2 col-xl-2">
                                        <img src="/Content/Image/@cart.Product.ImageUrl" style="height:100px;" class="img-fluid rounded-3" alt="Product Image">
                                    </div>
                                    <div class="col-md-3 col-lg-3 col-xl-3">
                                        <p class="lead fw-normal mb-2">@cart.Product.ProductName</p>
                                        <p><span class="text-muted">@Html.Raw(cart.Product.Description)</span></p>
                                    </div>

                                    <div class="col-4 text-md-right pt-4">
                                        <h6>
                                            <strong>
                                                @cart.Product.Price
                                                    <span class="text-muted">&nbsp;x&nbsp;</span> @cart.RentalDuration
                                                <span class="text-muted">&nbsp;x&nbsp;</span>@cart.Count
                                            </strong>
                                        </h6>
                                    </div>
                                      <input type="hidden" name="rentalDuration" value="@cart.RentalDuration" />
                                    <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                         
                                        <a asp-action="plus" asp-route-id="@cart.Id" class="btn btn-link px-2">
                                            <i class="fas fa-plus-circle fa-lg"></i>
                                        </a>
                                        <a asp-action="minus" asp-route-id="@cart.Id" class="btn btn-link px-2">
                                            <i class="fas fa-minus-circle fa-lg"></i>
                                        </a>
                                        <a asp-action="delete" asp-route-id="@cart.Id" class="btn btn-link px-2">
                                            <i class="fas fa-trash fa-lg-danger"></i>
                                        </a>
                                    </div>

                                </div>
                            </div>
                                <ul class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
                                   <li class="list-group-item d-flex justify-content-between bg-light">
                                        <span class="text-info">Price</span>
                                        <strong class="text-info">@cart.Product.Price</strong>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between bg-light">
                                        <span class="text-info">Rental Price</span>
                                        <strong class="text-info">@cart.Product.RentalPrice</strong>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between bg-light">
                                        <span class="text-info">Refund Amount</span>
                                        <strong class="text-info">@cart.RefundAmount</strong>
                                    </li>
                                </ul>
                        </div>

                    }
                }
                <div class="row">
                    <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between bg-light">
                                <span class="text-info"> Total</span>
                                <strong class="text-info">@Model.RentalOrderHeader.OrderTotal</strong>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="card-footer">


                    <div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
                        <a asp-action="Summary" class="btn btn-success form-control">Payment</a>
                    </div>

                </div>
                </form>
            </div>
        </div>


    </div>
</section>
