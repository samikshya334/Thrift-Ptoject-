@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<style>
    body
    {
        background-image:url('/Image/image.jpg');
        -webkit-backdrop-filter: blur(10px);
        backdrop-filter: blur(10px);
        background-size: contain;
        height: 100vh;

    }
</style>

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card-body">
                <h1>@ViewData["Title"]</h1>
                <section>
                    <form id="account" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3 form-floating">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-floating">
                            <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <label asp-for="Input.Password" class="form-label"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <div>
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label asp-for="Input.RememberMe" class="form-check-label">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                                <a id="forgot-password" asp-page="./ForgotPassword" class="ms-3" style="color:black">Forgot your password?</a>
                        </div>
                        <div class="mb-3">
                                <button id="login-submit" type="submit" class="btn w-100" style="background-color:chocolate;color:white">Log in</button>
                        </div>
                            <div class="mb-3">
                                <button id="login-submit" type="submit" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-secondary  w-100">Register</button>
                            </div>
                      
                    </form>
                </section>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
